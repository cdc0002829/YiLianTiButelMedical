<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_hold_meeting_index">

<LinearLayout
    android:id="@+id/indexItem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ebeef2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x40"
    >

    <TextView
        android:id="@+id/indexTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y44"
        android:textColor="#aaabad" 
        android:textSize="@dimen/x28"/>

</LinearLayout>

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y120" >

    <LinearLayout
        android:id="@+id/llitem"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y120"
        android:background="@drawable/contact_item_selector"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <ImageView
                android:id="@+id/cbselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x28"
                android:layout_marginLeft="@dimen/x28"
                android:background="@drawable/new_holdmeetinguncheck"
                android:text=""
                android:visibility="visible" />

            <ImageView
                android:id="@+id/cbunselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x28"
                android:layout_marginLeft="@dimen/x28"
                android:background="@drawable/new_holdmeetingcheck"
                android:text=""
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/hold_meeting_headimage"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x26"
            android:background="@drawable/default_head_image"
            android:scaleType="centerCrop"
            android:text="" />

        <TextView
            android:id="@+id/itemTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#323233"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:textSize="@dimen/x30" />
    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/holdmeeting_item_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x120"
            android:background="#e3e4e5" />
    </LinearLayout>
    
    </LinearLayout>
    
</LinearLayout>