<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_consulting_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.redcdn.hvs.meeting.activity.ConsultingRoomActivity"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <include
        layout="@layout/titlebar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/y40"
        android:background="#f0f0f6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y110">

            <TextView
                android:layout_width="@dimen/x132"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x14"
                android:text="@string/meeting_consult_meeting_topic"
                android:textColor="#35373f"
                android:textSize="@dimen/x32"
                />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#dfe5eb"/>

        <EditText
            android:id="@+id/meetingtitle_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:textColor="#35373f"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="16dp"
            android:textColorHint="#a4aabb"/>
    </LinearLayout>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/line_height"
         android:layout_marginBottom="15dp"
         android:background="#dfe3e8" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#dfe3e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y110"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="@dimen/x132"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x14"
                android:text="@string/meeting_consult_meeting_time"
                android:textColor="#35373f"
                android:textSize="@dimen/x32"
                />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#dfe5eb"/>

        <Button
            android:id="@+id/reserve_dateBtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:textColor="#35373f"
            android:text="2016-01-01"
            android:gravity="left|center"
            android:textSize="16dp"
            android:layout_weight="0.96"/>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#dfe5eb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#dfe5eb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#ffffff"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="@dimen/x132"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x14"
                android:text="@string/meeting_start_meeting_time"
                android:textColor="#35373f"
                android:textSize="@dimen/x32"
                />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="#dfe5eb"/>

        <Button
            android:id="@+id/reserve_timeBtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:textColor="#35373f"
            android:text="2016-01-01"
            android:gravity="left|center"
            android:textSize="16dp"
            android:layout_weight="0.96"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#dfe3e8"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f6">

        <Button
            android:id="@+id/reserver_meeting_btn"
            android:layout_width="@dimen/x670"
            android:layout_height="@dimen/y94"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:background="@drawable/meeting_consult_meeting_activity_reserve_button_selector"
            android:text="@string/meeting_reservemeeting_txg"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/x34"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/x192"/>

    </RelativeLayout>

</LinearLayout>