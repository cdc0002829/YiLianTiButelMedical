<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/auxiliary_exam_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll_examHelp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y240"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x26"
            android:text="辅助检查" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x26"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exam_one_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_two_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_three_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_four_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_five_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_six_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_seven_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_eight_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/exam_nine_img"
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:layout_marginLeft="@dimen/x14"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/x32"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9" />

    </LinearLayout>
</LinearLayout>
