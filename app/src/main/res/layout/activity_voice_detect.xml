<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar"
        android:id="@+id/title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:background="#f0f0f6">

        <RelativeLayout
            android:id="@+id/voice_detect_rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="@string/keep_silence"
                android:textColor="#2d2d2d"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="176dp"
                android:background="@drawable/voice_not_detect" />

            <Button
                android:id="@+id/start_voice_detect"
                android:layout_width="190dp"
                android:layout_height="43dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="95dp"
                android:background="@drawable/button_selector"
                android:text="@string/start_detect"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice_detect_rl_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f6"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="@string/ing_keep_silence"
                android:textColor="#2d2d2d"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rotate_rl_1"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="176dp">

                <ImageView
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/voice_detecting" />

                <ImageView
                    android:id="@+id/rotate_iv"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/voice_detect_rotation" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rotate_rl_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:text="@string/detecting"
                android:textColor="#2d2d2d"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice_detect_rl_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f6"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="@string/detecting_success"
                android:textColor="#2d2d2d"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_below="@id/tv3"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="48dp"
                android:background="@drawable/voice_detect_success" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/voice_detect_rl_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="113dp"
                android:gravity="center"
                android:text="@string/detect_again"
                android:textColor="#2d2d2d"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="@string/detect_fail"
                android:textColor="#f76260"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="176dp"
                android:background="@drawable/voice_not_detect" />

            <Button
                android:id="@+id/restart_voice_detect"
                android:layout_width="190dp"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="382dp"
                android:background="@drawable/button_selector"
                android:text="@string/re_detect"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
