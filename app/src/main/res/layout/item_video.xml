<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x10">

    <RelativeLayout
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y430"
        android:background="@drawable/shape_border_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/collection_operator"
                layout="@layout/collection_operator_layout" />

            <RelativeLayout
                android:id="@+id/collection_vedio_rl"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y336"
                android:layout_below="@id/collection_operator">

                <RelativeLayout
                    android:layout_width="@dimen/x490"
                    android:layout_height="@dimen/y306"
                    android:layout_marginTop="@dimen/y30">

                    <ImageView
                        android:id="@+id/collection_vedio_view"
                        android:layout_width="@dimen/x460"
                        android:layout_height="@dimen/y276"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"
                        android:layout_centerInParent="true"
                        android:background="@null"
                        android:src="@drawable/video_icon" />

                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/y50"
                        android:layout_marginRight="@dimen/x30"
                        android:textColor="@color/chat_date_text"
                        android:textSize="@dimen/x26" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>