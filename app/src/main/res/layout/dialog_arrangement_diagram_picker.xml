<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/default_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_arrangement_diagram_picker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text=""
            android:textSize="@dimen/x30"
            android:textColor="@color/gray_text_color"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="#ebedf0"/>

    <ListView
        android:id="@+id/request_pickerscrlllview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

    </ListView>

    <RelativeLayout
        android:background="@color/default_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/request_dialog_h_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/y80"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#ebedf0"/>

        <TextView
            android:id="@+id/iv_request_picker_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center"
            android:background="@drawable/custom_dialog_right_btn_selector"
            android:text="@string/cancel"
            android:textSize="@dimen/x36"
            android:textColor="@color/btn_color_blue"
            />

    </RelativeLayout>

</LinearLayout>
