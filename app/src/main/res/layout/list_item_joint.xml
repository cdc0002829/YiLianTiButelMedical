<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y107"
    android:background="@drawable/contact_item_selector">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x28">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="接诊中"
            android:textColor="@color/white"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/total_new_notice_ing_num"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x34"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginTop="@dimen/y5"
            android:background="@drawable/chat_unread_count"
            android:gravity="center"
            android:text="15"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:visibility="visible" />
    </FrameLayout>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/y1"-->
        <!--android:layout_alignParentBottom="true"-->

        <!--android:background="@color/color_butel_selfinfo_darkline_color" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y40"
            android:layout_marginLeft="@dimen/x134">

            <TextView
                android:id="@+id/list_item_doctor_name1"
                android:textColor="@color/btn_color_black"
                android:textSize="@dimen/x32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_marginRight="@dimen/x20"
                android:id="@+id/ing_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/new_color"
                android:textSize="@dimen/x20" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x134"
            android:layout_marginTop="@dimen/y14"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:textColor="@color/local_decrible_txt_color"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_toRightOf="@id/to"
                android:id="@+id/ing_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:singleLine="true"
                android:maxEms="15"
                android:ellipsize="end"
                android:textColor="@color/local_decrible_txt_color"
                android:textSize="@dimen/x24" />

            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@id/ing_hospital"
                android:id="@+id/ing_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:singleLine="true"
                android:maxEms="5"
                android:ellipsize="end"
                android:textColor="@color/local_decrible_txt_color"
                android:textSize="@dimen/x24" />

            <TextView
                android:visibility="gone"
                android:layout_toRightOf="@id/ing_department"
                android:id="@+id/ing_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:singleLine="true"
                android:maxEms="4"
                android:ellipsize="end"
                android:textColor="@color/local_decrible_txt_color"
                android:textSize="@dimen/x24" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x28"
                android:id="@+id/ing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x70"
                android:textColor="@color/new_color"
                android:textSize="@dimen/x20" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>