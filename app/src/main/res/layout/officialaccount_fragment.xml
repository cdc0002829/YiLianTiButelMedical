<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/main_head_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_recommond"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y90"
                android:background="@null"
                android:text="@string/official_recommond"
                android:textColor="#656a72"
                android:textSize="@dimen/x36" />
            <View
                android:id="@+id/recommond_view"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y5"
                android:layout_gravity="center_horizontal"
                android:background="#3aabcb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_onOrder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y90"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/official_line"
                android:background="@null"
                android:text="@string/officialaccounttitle"
                android:textColor="#656a72"
                android:textSize="@dimen/x36" />
            <View
                android:id="@+id/order_view"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y5"
                android:layout_marginLeft="@dimen/x11"
                android:layout_gravity="center_horizontal"
                android:background="#3aabcb" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#c3c8cd"/>
    <cn.redcdn.hvs.officialaccounts.widget.ChildViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/official_vp"
        />
</LinearLayout>