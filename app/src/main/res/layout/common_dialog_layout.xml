<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_out_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lt_close"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x43"
        android:paddingBottom="@dimen/x31">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x42"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:text="tishi"
            android:textColor="@color/color_threads_black_1"
            android:textSize="16sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/close_dialog_img"
            android:visibility="gone">
        </ImageView>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line"
        android:background="#cdccd1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/lt_difine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="1dp">
        <!--android:minHeight="142dp"-->
        <EditText
            android:id="@+id/tv_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:gravity="center_vertical"
            android:lineSpacingExtra="11dp"
            android:maxLines="10"
            android:textColor="#313233"
            android:textSize="15sp"/>

        <RelativeLayout
            android:id="@+id/et_verify_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/modified_et_nickname_height"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="3dp"
            android:background="@color/contact_bg_color"
            android:duplicateParentState="false"
            android:gravity="center_vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_verify"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/iv_delete3"
                android:background="@color/contact_bg_color"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:paddingLeft="@dimen/modified_name_dialog_padding"
                android:textColor="@color/color_userinfo"
                android:textColorHint="@color/common_text_hint_color"
                android:textSize="@dimen/word_size_16sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_delete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:paddingRight="@dimen/modified_et_nickname_paddingLeft"
                android:src="@drawable/ic_et_clear"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line"
        android:background="#cdccd1"
        android:visibility="invisible"/>
    <!--文本信息线性布局-->
    <LinearLayout
        android:id="@+id/transmit_info_text_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x42"
        android:layout_marginRight="@dimen/x42"
        android:paddingTop="@dimen/x31"
        android:paddingBottom="@dimen/x31"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <cn.redcdn.hvs.im.util.smileUtil.EmojiconTextView
            android:id="@+id/transmit_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8d8d8d"
            android:maxLines="3"
            ></cn.redcdn.hvs.im.util.smileUtil.EmojiconTextView>
    </LinearLayout>
    <!--图片信息线性布局-->
    <RelativeLayout
        android:id="@+id/transmit_picture_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x42"
        android:layout_marginRight="@dimen/x42"
        android:paddingTop="@dimen/x31"
        android:paddingBottom="@dimen/x31"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/transmit_img"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y320"
            android:layout_centerInParent="true"
            ></ImageView>
        <ImageView
            android:id="@+id/vide_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_icon"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    <!--名片信息线性布局-->
    <LinearLayout
        android:id="@+id/transmit_business_card_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x51"
        android:layout_marginRight="@dimen/x42"
        android:paddingTop="@dimen/y65"
        android:paddingBottom="@dimen/y65"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/business_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8d8d8d"
            android:text="@string/common_card"
            ></TextView>

        <TextView
            android:id="@+id/business_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8d8d8d"
            android:text="名片名称"
            ></TextView>

        <TextView
            android:layout_marginLeft="@dimen/x4"
            android:id="@+id/business_car_nube_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#8d8d8d"
            android:text="名片视讯号"
            ></TextView>
    </LinearLayout>
    <!--会议信息布局-->
    <LinearLayout
        android:id="@+id/transmit_meeting_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x42"
        android:layout_marginRight="@dimen/x42"
        android:paddingTop="@dimen/y31"
        android:paddingBottom="@dimen/y31"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/meeting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/subscribe_meeting"
                ></TextView>
            <TextView
                android:id="@+id/meeting_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/meeting_descripe"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/transmit_topic_ll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/common_topic"
                ></TextView>

            <TextView
                android:id="@+id/transmit_meeting_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="主题内容"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transmit_meeting_time_ll"
            android:visibility="gone"
            android:layout_marginTop="@dimen/x17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/common_time"
                ></TextView>
            <TextView
                android:id="@+id/meeting_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/common_date"
                ></TextView>
            <TextView
                android:id="@+id/meeting_time_hms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8d8d8d"
                android:text="@string/common_time"
                ></TextView>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line"
        android:background="#cdccd1"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/operation_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/commondialog_operation_layout"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_left_bottom_radios"
            android:gravity="center"
            android:text="@string/cancel_message"
            android:textColor="#323233"
            android:textSize="@dimen/word_size_16sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/line3"
            android:layout_width="@dimen/line"
            android:layout_height="fill_parent"
            android:background="#cdccd1"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_right_bottom_radios"
            android:gravity="center"
            android:text="@string/confirm_message"
            android:textColor="#3db2b9"
            android:textSize="@dimen/word_size_16sp"
            android:visibility="invisible"/>
    </LinearLayout>

    <!-- android:textColor="#2181f7" -->

</LinearLayout>