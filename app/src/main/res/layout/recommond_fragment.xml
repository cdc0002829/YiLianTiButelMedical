<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommond"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9eaee"
    android:orientation="vertical">

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/requestData"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:text="@string/dataLoading"
            android:textSize="@dimen/x28"/>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recommond_recyview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
        <LinearLayout
            android:layout_marginTop="@dimen/y206"
            android:id="@+id/no_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200"
                android:layout_gravity="center"
                android:src="@drawable/no_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/noRecommendation"
                android:textColor="#8d8d8d"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>