<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/auditerrorimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y110"
            app:srcCompat="@drawable/audit_error_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/y88"
            android:text="@string/deny"
            android:textSize="@dimen/x36"/>
    </LinearLayout>

    <TextView
        android:id="@+id/reason_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:text="@string/deny_content"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:textSize="@dimen/x28"
        android:textColor="#8d8d8d"/>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:layout_marginTop="@dimen/y20"-->
        <!--android:text="请您重新认证！谢谢！"-->
        <!--android:textSize="@dimen/x28"-->
        <!--android:textColor="#8d8d8d"/>-->

    <Button
        android:id="@+id/auditerrorBtn2"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y112"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="@string/reconfig"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:autoLink="phone"
        android:id="@+id/audit_REVIEW_NUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/x24"
        android:textColor="#b5b5b5"
        android:layout_marginBottom="@dimen/y76"/>


</LinearLayout>
