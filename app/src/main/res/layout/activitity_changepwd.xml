<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <RelativeLayout style="@style/layout_head">

        <Button
            android:id="@+id/changepwd_back"
            style="@style/back_btn" />

        <TextView
            style="@style/middle_text"
            android:text="@string/modify_password" />

        <Button
            android:id="@+id/changepwd_sure_btn"
            android:layout_width="@dimen/x66"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:background="@null"
            android:text="@string/save"
            android:textColor="#aa656a72"
            android:textSize="@dimen/x32" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/main_head_divide_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y40"
        android:background="#e3e4e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="#ffffff">

        <EditText
            android:id="@+id/newpwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="@string/input_newpwd"
            android:inputType="number"
            android:maxLength="6"
            android:password="true"
            android:textColor="#4b4c4c"
            android:textColorHint="#c8cacc"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#e3e4e5" />

</LinearLayout>
