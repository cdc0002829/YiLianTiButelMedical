<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x10">

    <RelativeLayout
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y270"
        android:background="@drawable/shape_border_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/collection_operator"
                layout="@layout/collection_operator1_layout"></include>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y135"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y26"
                    android:scaleType="fitXY"
                    android:src="@drawable/gongzhonghao" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collection_article_view"
                        android:layout_width="@dimen/x500"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginTop="@dimen/y32"
                        android:maxLines="2"
                        android:textColor="#313233"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/zhuozhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:singleLine="true"
                        android:text="@string/writer"
                        android:textSize="@dimen/x28" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>