<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:centerColor="#71737a"
                android:centerY="0.75"
                android:endColor="#71737a"
                android:startColor="#71737a"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#5095ab"
                    android:centerY="0.75"
                    android:endColor="#5095ab"
                    android:startColor="#5095ab"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#fed7ec"
                    android:centerY="0.75"
                    android:endColor="#fed7ec"
                    android:startColor="#fed7ec" />
            </shape>
        </clip>
    </item>

</layer-list>