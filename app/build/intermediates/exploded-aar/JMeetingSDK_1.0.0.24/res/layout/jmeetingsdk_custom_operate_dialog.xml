<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="270dp"
        android:layout_height="167dp"
        android:layout_centerInParent="true"
        android:background="@drawable/jmeetingsdk_custom_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/qn_operate_dialog_body_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:gravity="center" >

            <TextView
                android:id="@+id/qn_operate_dialog_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:text="@string/seeConsultation"
                android:textColor="#737373"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/qn_operate_dialog_body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qn_operate_dialog_body"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/seeConsultation"
                android:textColor="#8d8d8d"
                android:textSize="16dp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/custom_dialog_h_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#d9d9d9" />

        <LinearLayout
            android:id="@+id/two_button_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0dp" >

            <Button
                android:id="@+id/qn_operae_dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_left_btn_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="#656a72"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/custom_dialog_v_line"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <Button
                android:id="@+id/qn_operae_dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_right_btn_selector"
                android:gravity="center"
                android:text="@string/makesure"
                android:textColor="#4cb4ce"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_button_layout"
            android:layout_width="match_parent"
            android:layout_height="19.5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:visibility="gone" >

            <Button
                android:id="@+id/qn_operae_dialog_center_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_center_btn_selector"
                android:gravity="center"
                android:text="@string/makesure"
                android:textColor="#4cb4ce"
                android:textSize="7dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>