<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="306dp"
        android:layout_height="251dp"
        android:layout_centerInParent="true"
        android:background="@drawable/meeting_room_main_button_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/qn_operate_dialog_body_parent"
            android:layout_width="306dp"
            android:layout_height="251dp"
            android:background="@android:color/transparent" >

            <TextView
                android:id="@+id/qn_operate_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:text="@string/tellaFriend"
                android:textColor="#898b8d"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/qn_live_share_dialog_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/jmeetingsdk_menu_live_titile_cancle" />

            <ImageView
                android:id="@+id/qn_live_share_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/meeting_room_menu_h_line_height"
                android:layout_below="@+id/qn_operate_dialog_title"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#292d30" />

            <TextView
                android:id="@+id/qn_operate_dialog_share_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qn_live_share_line"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="22dp"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:text="@string/callingameeting"
                android:textColor="#585d62"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/qn_operate_dialog_share_body"
                android:layout_marginTop="38dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qn_operate_dialog_share_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/share_live_to_weixin_selector"
                    android:gravity="center"
                    android:text="@string/wechatfriends"
                    android:textColor="#7d848a"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/qn_operate_dialog_share_wf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/share_live_to_friend_selector"
                    android:gravity="center"
                    android:text="@string/circleOfFriends"
                    android:textColor="#7d848a"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/qn_operate_dialog_share_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/share_live_to_sms_selector"
                    android:gravity="center"
                    android:text="@string/sms"
                    android:textColor="#7d848a"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/qn_operate_dialog_share_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="8dp"
                    android:drawableTop="@drawable/share_live_to_copy_selector"
                    android:gravity="center"
                    android:text="@string/copylink"
                    android:textColor="#7d848a"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>