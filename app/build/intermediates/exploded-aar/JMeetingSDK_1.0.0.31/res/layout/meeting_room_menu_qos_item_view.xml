<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y10"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/qosInfoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:gravity="left"
        android:paddingLeft="@dimen/meeting_room_menu_qos_view_text_view_padding_left"
        android:text="@string/videoformat"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="@dimen/meeting_room_menu_qos_view_text_view_text_size" />

    <TextView
        android:id="@+id/qosInfoTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="left"
        android:paddingLeft="@dimen/meeting_room_menu_qos_view_text_view_padding_left"
        android:text="MV"
        android:textColor="#999999"
        android:textSize="@dimen/meeting_room_menu_qos_view_text_view_text_size" />

</LinearLayout>