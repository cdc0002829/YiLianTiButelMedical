<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/ll_group">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群  组  名  字   " />

        <EditText
            android:id="@+id/edt_strgroupname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组  头  像     " />

        <EditText
            android:id="@+id/edt_strheadurl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群    用    户    列    表   " />

        <EditText
            android:id="@+id/edt_struserlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupcreate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="创    建   群    组" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 群组信息更新 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群     组     ID  " />

        <EditText
            android:id="@+id/edt_strgroupid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群    组    名    字 " />

        <EditText
            android:id="@+id/edt_strgroupname_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   头   像  " />

        <EditText
            android:id="@+id/edt_strheadurl_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupupdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群  组  信  息  更  新" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 群组添加成员 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群  组  列  表" />

        <EditText
            android:id="@+id/edt_struserlist_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupaddusers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群  组  添  加  成  员" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 群组删除成员 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_del"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群  组  列  表" />

        <EditText
            android:id="@+id/edt_struserlist_del"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupdelusers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群  组  删   除 成  员" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />

    <!-- 退出群组 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_quit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群  主  nube 号  码" />

        <EditText
            android:id="@+id/edt_strnewownernube"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupquit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="退  出  群  组" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 解散群组 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_delete_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupdelete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="解   散 群  组" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 查  询  群  组 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupdetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="查  询   群  组" >
    </Button>

    <Button
        android:id="@+id/btn_groupgetall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="得到相关所有群组" >
    </Button>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#d71345"
        android:text="-" />
    <!-- 发   群  组    消      息 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息类型请参照上面的类型下拉框" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群   组   ID" />

        <EditText
            android:id="@+id/edt_strgroupid_send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息文本内容" />

        <EditText
            android:id="@+id/edt_strgrouptext_send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多媒体路径" />

        <EditText
            android:id="@+id/edt_strgroupurl_send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_groupsend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群消息发送" >
    </Button>

    <Button
        android:id="@+id/btn_groupsend_comb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="群消息发送comb" >
    </Button>

</LinearLayout>

</LinearLayout>