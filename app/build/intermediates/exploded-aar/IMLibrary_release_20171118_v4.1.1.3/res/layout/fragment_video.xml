<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" 
    android:id="@+id/rlayout_video">
  
    <SurfaceView
        android:id="@+id/remote_video_surfaceview_fragment"
        android:layout_width="480px"
        android:layout_height="640px"
        android:keepScreenOn="true"
        android:visibility="visible"
        android:layout_centerInParent="true" 
         />
    
    <ImageView
        android:id="@+id/init_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:contentDescription="@null"
        android:src="@drawable/butelconnect_vedio_init_bg" />
        
     <SurfaceView
        android:id="@+id/local_video_surfaceview_fragment"
        android:layout_width="250px"
        android:layout_height="188px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:keepScreenOn="true"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
          />   
  <Button
      android:id="@+id/btn_hungup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="hungup"
      android:layout_alignParentBottom="true"></Button>
 


</RelativeLayout>