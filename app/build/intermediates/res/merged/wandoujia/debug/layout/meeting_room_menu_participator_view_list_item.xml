<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/meeting_room_menu_participators_view_bg_width"
    android:layout_height="@dimen/meeting_room_menu_participators_view_list_item_height"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="@dimen/meeting_room_menu_participators_view_list_item_height"
    android:orientation="vertical"
    tools:context="cn.redcdn.jmeetingsdk.cn.redcdn.sdkjmeeting.MeetingRoomActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/meeting_room_menu_participators_view_list_item_imageview_width"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="2" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >
                
            <cn.redcdn.util.RoundImageView
                android:id="@+id/meeting_room_menu_participator_view_list_item_participator_img"
                android:layout_width="@dimen/meeting_room_menu_participators_view_list_item_account_img_width"
                android:layout_height="@dimen/meeting_room_menu_participators_view_list_item_account_img_width"
                android:layout_gravity="center_vertical"
                android:src="@drawable/meeting_room_menu_person_default_icon" >
            </cn.redcdn.util.RoundImageView>
            
            <ImageView
                    android:id="@+id/meeting_room_menu_audio_speaker_off_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/jmeetingsdk_menu_auido_speaker_off_image"
                    android:visibility="visible" />
                
            </FrameLayout>
                
                
            

        </LinearLayout>

        <TextView
            android:id="@+id/meeting_room_menu_participator_view_list_item_participator_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="7"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#f5f7fa"
            android:textSize="@dimen/meeting_room_menu_participators_view_list_item_account_name_textview_text_size" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11" >

            <TextView
                android:id="@+id/meeting_room_menu_participator_view_list_item_participator_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="71777756"
                android:textColor="#969799"
                android:textSize="@dimen/meeting_room_menu_participators_view_list_item_account_name_textview_text_size" />

            <TextView
                android:id="@+id/meeting_room_menu_participator_view_list_item_add_to_txl_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/meeting_room_menu_participators_view_list_item_add_to_txl_btn_margin_left"
                android:layout_toRightOf="@id/meeting_room_menu_participator_view_list_item_participator_account_id"
                android:text="@string/add"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/meeting_room_menu_participators_view_list_item_add_to_txl_image_view_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/h_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/meeting_room_menu_h_line_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/meeting_room_menu_h_line_margin_left"
        android:layout_marginTop="@dimen/meeting_room_menu_participators_view_list_item_height"
        android:background="#33FFFFFF" />

</FrameLayout>