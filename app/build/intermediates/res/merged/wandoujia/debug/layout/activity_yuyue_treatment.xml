<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_head_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_select_department"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_select_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_select_department"
                    android:textColor="@color/btn_color_gray"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:id="@+id/rl_hps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x22"
                android:paddingBottom="@dimen/x22"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_hpu"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_hps_content"
                    android:layout_width="@dimen/x460"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x200"
                    android:text="@string/reserve_treatment_select_hpu"
                    android:textColor="@color/reserve_dt_content_hint_color"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_hps_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x14"
                    android:background="@drawable/reserve_dt_next" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:paddingTop="@dimen/x22"
                android:paddingBottom="@dimen/x22"
                android:id="@+id/rl_hospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_hospital"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_hospital_content"
                    android:layout_width="@dimen/x460"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_hospital"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x200"
                    android:text="@string/reserve_treatment_select_hospital"
                    android:textColor="@color/reserve_dt_content_hint_color"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_hospital_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x14"
                    android:background="@drawable/reserve_dt_next" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:paddingTop="@dimen/x22"
                android:paddingBottom="@dimen/x22"
                android:id="@+id/rl_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_department"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_department_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x200"
                    android:text="@string/reserve_treatment_select_department"
                    android:textColor="@color/reserve_dt_content_hint_color"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_department_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x14"
                    android:background="@drawable/reserve_dt_next" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_consult_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_consult_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/yuyuemenzhen"
                    android:textColor="@color/btn_color_gray"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/paiban"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_time_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x200"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_schedule"
                    android:textSize="@dimen/x32"
                    android:textColor="@color/reserve_dt_content_hint_color"/>

                <ImageView
                    android:id="@+id/iv_time_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x14"
                    android:background="@drawable/reserve_dt_next"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_patient_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_patient_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_patient_information"
                    android:textColor="@color/btn_color_gray"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_name"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x200"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:hint="@string/reserve_treatment_enter_name"
                    android:inputType="text"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="@color/btn_color_black"
                    android:textColorHint="@color/reserve_dt_content_hint_color"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/x32" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x20"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y90"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/reserve_treatment_phone"
                    android:textColor="@color/btn_color_black"
                    android:textSize="@dimen/x32" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x200"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:hint="输入手机号码,用于短信通知"
                    android:inputType="number"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:textColor="@color/btn_color_black"
                    android:textColorHint="@color/reserve_dt_content_hint_color"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/x32" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/body_info"
                    android:textColor="@color/btn_color_gray"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_information"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_information_age"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="@dimen/x120"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/patient_condition_age"
                        android:textColor="@color/my_text_color"
                        android:textSize="@dimen/x28" />

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y14"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/reserve_dt_more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_information_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="@dimen/x120"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/patient_condition_gender"
                        android:textColor="@color/my_text_color"
                        android:textSize="@dimen/x28" />

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y14"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/reserve_dt_more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_information_height"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_height"
                        android:layout_width="@dimen/x120"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/patient_condition_height"
                        android:textColor="@color/my_text_color"
                        android:textSize="@dimen/x28" />

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y14"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/reserve_dt_more" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_information_weight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="@dimen/x120"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/patient_condition_weight"
                        android:textColor="@color/my_text_color"
                        android:textSize="@dimen/x28" />

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y14"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/reserve_dt_more" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_abstract_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_abstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="@string/patient_condition_abstract"
                    android:textColor="@color/btn_color_gray"
                    android:textSize="@dimen/x26" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_abstract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:hint="@string/patient_condition_limitation"
                    android:maxLength="500"
                    android:minHeight="@dimen/y200"
                    android:padding="@dimen/x30"
                    android:textColor="@color/btn_color_black"
                    android:textColorHint="@color/reserve_dt_content_hint_color"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="@dimen/x30" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_inspection_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_inspection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/btn_color_gray"
                    android:text="@string/patient_condition_inspection"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_inspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <EditText
                    android:id="@+id/et_inspection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/patient_condition_limitation"
                    android:padding="@dimen/x30"
                    android:gravity="top"
                    android:textSize="@dimen/x30"
                    android:textColor="@color/btn_color_black"
                    android:textColorHint="@color/reserve_dt_content_hint_color"
                    android:maxLength="500"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:minHeight="@dimen/y200"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_supported_check_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_supported_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/btn_color_gray"
                    android:text="@string/patient_condition_supported_check"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <RelativeLayout
                android:id="@+id/rl_check"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ll_supported_check"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y64"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x28"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true">

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_default"
                    android:layout_width="@dimen/x64"
                    android:layout_height="@dimen/y64"
                    android:layout_centerVertical="true"
                    android:background="@drawable/patient_condition_add_picture"
                    android:layout_toRightOf="@+id/ll_supported_check"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_patient_condition_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y210"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:background="@color/white">

                <android.support.v4.view.ViewPager
                    android:id="@+id/patient_condition_check_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x15"
                    />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_to_be_solved_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y44"
                android:background="@color/main_head_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_to_be_solved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/btn_color_gray"
                    android:text="@string/patient_condition_to_be_solved"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <LinearLayout
                android:id="@+id/ll_to_be_solved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <EditText
                    android:id="@+id/et_to_be_solved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/patient_condition_limitation"
                    android:padding="@dimen/x30"
                    android:gravity="top"
                    android:textSize="@dimen/x30"
                    android:textColor="@color/btn_color_black"
                    android:textColorHint="@color/reserve_dt_content_hint_color"
                    android:maxLength="500"
                    android:ellipsize="end"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:minHeight="@dimen/y200"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y1"
                android:background="#e3e4e5" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="@dimen/x600"
                android:layout_height="@dimen/y80"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/y50"
                android:layout_marginTop="@dimen/y50"
                android:background="@drawable/reserve_treatment_btn_selector"
                android:gravity="center"
                android:text="@string/reserve_treatment_reserve"
                android:textColor="@color/white"
                android:textSize="@dimen/x32" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
