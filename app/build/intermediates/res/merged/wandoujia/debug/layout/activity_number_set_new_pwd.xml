<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/verification_code"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />
        </LinearLayout>


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x42"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="@dimen/x200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20">

            <EditText
                android:id="@+id/checkcode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/input_verification_code"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#2d2d2d"
                android:textColorHint="#8d8d8d"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x90"
            android:background="#d9d9d9" />


        <TextView
            android:id="@+id/getcheckcode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:onClick="onButtonClick"
            android:text="@string/reget"
            android:textColor="#f76626"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/checkcodetime_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="（20）"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x28"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/new_psw"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x42"
            android:background="#d9d9d9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20">

            <EditText
                android:id="@+id/newpwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="@string/set_psw"
                android:inputType="number"
                android:maxLength="6"
                android:password="true"
                android:textColor="#2d2d2d"
                android:textColorHint="#8d8d8d"
                android:textSize="@dimen/x32" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/y40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailsetnewpwdtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verification_code_passed"
                android:textColor="#8d8d8d"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/email_setnewpwd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textColor="#3aabcd"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <TextView
            android:id="@+id/emailsetnewpwdtextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/reset_psw"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x24" />

    </LinearLayout>

    <Button
        android:id="@+id/setnewpwd_finish_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/button_selector"
        android:onClick="onButtonClick"
        android:text="@string/complete"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />
</LinearLayout>