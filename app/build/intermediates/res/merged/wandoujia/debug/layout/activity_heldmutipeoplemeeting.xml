<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0f6"
    android:orientation="vertical" >

    <RelativeLayout style="@style/layout_head" >

        <Button
            android:id="@+id/btnmutiback"
            style="@style/back_btn" />

        <TextView
            android:id="@+id/tv_multi_meeting_title"
            style="@style/middle_text"
            android:text="@string/mutipeoplemeeting_titile_string" />

        <Button
            android:id="@+id/btnmutipeoplemeeting"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x1"
            android:background="@color/transparent"
            android:text="@string/jmeeting_ensure"
            android:textColor="@color/select_linkman_btn_disable_color"
            android:textSize="@dimen/x30" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llviewpage"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y94"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x30"
        android:visibility="gone" >

        <android.support.v4.view.ViewPager
            android:id="@+id/invite_list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="0dp"
             />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f0f6"
        android:paddingTop="0dp" >

        <LinearLayout
            android:id="@+id/transparent"
            android:layout_width="@dimen/x120"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:background="@null"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvtemp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvmutipeoplelist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="#00000000" >
        </ListView>
        <TextView
            android:id="@+id/tvselect"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/y130"
            android:layout_gravity="center"
            android:background="@drawable/indexselect"
            android:gravity="center"
            android:text="A"
            android:textColor="#ffffff"
            android:textSize="@dimen/x72"
            android:visibility="invisible"/>

        <!--索引栏-->
        <cn.redcdn.hvs.util.SideBar
            android:id="@+id/sidebar_holdmultimeeting_fragment"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y840"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/y90"
            app:sideTextSize="@dimen/x24"/>


    </FrameLayout>

</LinearLayout>