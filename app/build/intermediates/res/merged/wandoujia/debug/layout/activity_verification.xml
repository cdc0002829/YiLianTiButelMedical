<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout style="@style/layout_head" >

        <Button
            android:id="@+id/verification_back"
            style="@style/back_btn" />

        <TextView
            android:id="@+id/verification_title"
            style="@style/middle_text"
            android:text="@string/verification_title_string" />

        <Button
            android:id="@+id/verification_send"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x1"
            android:background="@color/transparent"
            android:text="@string/btn_send"
            android:textColor="@color/btn_color_blue"
            android:textSize="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verification_top_hint"
        android:textSize="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x20"
        android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginBottom="@dimen/y20">

            <EditText
                android:id="@+id/verification_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/verification_hint"
                android:textSize="@dimen/x35"
                android:background="@null"
                android:maxLength="50"
                android:maxLines="3"
                android:layout_marginRight="@dimen/x80"
                />

            <Button
                android:id="@+id/verification_delete"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/btn_verification_delete"
                />

        </RelativeLayout>



    </LinearLayout>

    </LinearLayout>

</LinearLayout>