<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_liner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginRight="@dimen/x20"
    android:layout_marginTop="@dimen/y20"
    android:background="@drawable/bg_dingyue"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20">


    <TextView
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginTop="@dimen/y10"
        android:id="@+id/content_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x30"
        android:gravity="center_vertical"
        android:text="@string/content_topic"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#2d2d2d"
        android:textSize="@dimen/x36" />

    <ImageView
        android:id="@+id/content_Image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y306"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/content_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/content_brief"
        android:textColor="#737373"
        android:textSize="@dimen/x28" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/public_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_time"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/x24" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/y22"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/public_time"
            android:background="@drawable/lock" />

        <TextView
            android:id="@+id/visit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/x24" />
    </RelativeLayout>
</LinearLayout>