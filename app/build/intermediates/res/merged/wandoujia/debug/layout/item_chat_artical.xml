<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <cn.redcdn.hvs.profiles.activity.XCRoundImageView
            android:id="@+id/head_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_gray_square_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y30">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="14"
            android:text="@string/my_name"
            android:textColor="@color/color_threads_black_1"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:text="@string/talking_time"
            android:textColor="@color/color_butel_selfinfo_darkline_color"
            android:textSize="@dimen/x24" />

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y120"
            android:layout_below="@id/name_tv"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="centerCrop"
            android:src="@drawable/gongzhonghao" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y20"
            android:layout_toRightOf="@id/image_iv"
            android:maxLines="2"
            android:text="@string/word_content_me"
            android:textColor="@color/add_to_contacts"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_tv"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y20"
            android:layout_toRightOf="@id/image_iv"
            android:singleLine="true"
            android:text="@string/jigou_name"
            android:textColor="@color/color_threads_black_1"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/x620"
            android:layout_height="@dimen/y1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image_iv"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/color_butel_selfinfo_darkline_color" />

    </RelativeLayout>

</LinearLayout>