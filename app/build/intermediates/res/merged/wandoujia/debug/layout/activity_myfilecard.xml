<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_page_backgroud_color"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/color_butel_selfinfo_darkline_color" />


    <ScrollView
        android:layout_marginTop="@dimen/y40"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/image_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y164"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x28"
                    android:text="@string/mycard_photo"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <Button
                    android:id="@+id/image_btn"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@drawable/nextlittle" />

                <cn.redcdn.hvs.im.view.RoundImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/head_iv"
                    android:layout_width="@dimen/x128"
                    android:layout_height="@dimen/y128"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x14"
                    android:layout_marginTop="@dimen/y18"
                    android:layout_toLeftOf="@id/image_btn"
                    android:contentDescription="@null"
                    android:src="@drawable/doctor_default"
                    android:visibility="visible"
                  />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/my_name"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/my_name"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/accountnum_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/my_account_id"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/account_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/my_account_num"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />

                <Button
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@drawable/nextlittle" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/phonenum_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/my_phone_id"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/my_phone_num"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/scan_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/scan"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x74"
                    android:src="@drawable/erweima" />

                <Button
                    android:id="@+id/goto_meeting_btn"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@drawable/nextlittle" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y40"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/hospital_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/y96"
                android:paddingLeft="@dimen/x28"
                android:paddingRight="@dimen/x28"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:text="@string/hospital"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginRight="@dimen/x46"
                    android:layout_centerVertical="true"
                    android:text="@string/hospital"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:textColor="#666666"
                    android:visibility="gone"
                    android:id="@+id/hospital_other"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/y17"
                    android:textSize="@dimen/x20"
                    android:layout_marginRight="@dimen/x46"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/room_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_marginTop="@dimen/y15"
                    android:text="@string/room"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/room"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />



            <RelativeLayout
                android:id="@+id/profession_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:id="@+id/job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/profession"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/profession"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/roomphone_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:id="@+id/job_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/room_phone"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/room_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/room_phone_num"
                    android:textColor="#666666"
                    android:textSize="@dimen/x32" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/x692"
                android:layout_height="@dimen/y1"
                android:layout_marginLeft="@dimen/x28"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/certification_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/certification"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/certification_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x74"
                    android:layout_centerVertical="true"
                    android:text="@string/certification_text"
                    android:textColor="@color/certification_has_color"
                    android:textSize="@dimen/x32" />

                <Button
                    android:id="@+id/certify_btn"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@drawable/nextlittle" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/color_butel_selfinfo_darkline_color" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y40"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <RelativeLayout
                android:id="@+id/modify_password_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y96"
                android:background="@drawable/contact_item_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x28"
                    android:layout_centerVertical="true"
                    android:text="@string/modify_password"
                    android:textColor="@color/qn_dialog_body_color"
                    android:textSize="@dimen/x32" />


                <Button
                    android:id="@+id/modify_btn"
                    android:layout_width="@dimen/x26"
                    android:layout_height="@dimen/y26"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x28"
                    android:background="@drawable/nextlittle" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:background="@color/color_butel_selfinfo_darkline_color" />

            <Button
                android:id="@+id/mycard_exit_btn"
                android:layout_width="@dimen/x670"
                android:layout_height="@dimen/y94"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y40"
                android:background="@drawable/zhuxiao_selector"
                android:focusable="true"
                android:onClick="onButton"
                android:text="@string/exist"
                android:textColor="#ffffff"
                android:textSize="@dimen/x32" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>