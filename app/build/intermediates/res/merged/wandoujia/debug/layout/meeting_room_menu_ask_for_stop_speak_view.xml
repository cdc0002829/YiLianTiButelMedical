<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <FrameLayout
        android:layout_width="@dimen/meeting_room_menu_ask_for_stop_speak_view_width"
        android:layout_height="@dimen/meeting_room_menu_ask_for_stop_speak_view_height"
        android:layout_gravity="center"
        android:background="@drawable/meeting_room_menu_dialog_bg" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/meeting_room_menu_ask_for_stop_speak_view_title_textview_margin_top"
                    android:text="取消发言"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/meeting_room_menu_ask_for_stop_speak_view_title_textview_text_size" />

                <Button
                    android:id="@+id/hide_view_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/meeting_room_menu_ask_for_speak_view_del_btn" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/meeting_room_menu_ask_for_stop_speak_view_button_and_textview_bg_width"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/meeting_room_menu_ask_for_stop_speak_view_give_mic_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/meeting_room_menu_ask_for_stop_speak_view_button_margin_top"
                        android:background="@drawable/meeting_room_menu_ask_for_stop_speak_view_speak_btn_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/meeting_room_menu_ask_for_stop_speak_view_textview_margin_top"
                        android:text="@string/thewheat"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/meeting_room_menu_ask_for_speak_view_textview_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/meeting_room_menu_ask_for_stop_speak_view_stop_speak_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/meeting_room_menu_ask_for_stop_speak_view_button_margin_top"
                        android:background="@drawable/meeting_room_menu_ask_for_stop_speak_view_stop_speak_btn_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/meeting_room_menu_ask_for_stop_speak_view_textview_margin_top"
                        android:text="@string/cancelSpeak"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/meeting_room_menu_ask_for_speak_view_textview_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>