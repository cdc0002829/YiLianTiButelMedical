<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/input_meeting_password_dialog_bg"
        android:layout_width="@dimen/y620"
        android:layout_height="@dimen/x380"
        android:background="@drawable/custom_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
           android:id="@+id/tv_input_meeting_password_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_marginTop="@dimen/y46"
           android:layout_marginLeft="@dimen/x40"
           android:background="@android:color/transparent"
           android:textSize="@dimen/x28"
           android:textColor="#2d2d2d"
           android:text="@string/input_meetingPwd"
           />

       <RelativeLayout
           android:id="@+id/rl_input_meeting_password_content"
           android:layout_width="match_parent"
           android:layout_height="@dimen/y72"
           android:layout_marginTop="@dimen/y120"
           android:layout_marginLeft="@dimen/x40"
           android:layout_marginRight="@dimen/x40"
           android:background="@drawable/input_password"
           >

         <EditText
             android:id="@+id/et_input_meeting_password_content"
             android:layout_marginLeft="@dimen/x20"
             android:layout_marginRight="@dimen/x20"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerInParent="true"
             android:hint="@string/meetingPwd"
             android:textSize="@dimen/x28"

             android:textColorHint="#c7c7cd"
             android:textColor="@color/btn_text_color_black"
             android:inputType="number"
             android:password="true"
             android:maxLength="6"
             android:background="@android:color/transparent"
             />

         </RelativeLayout>

       <!-- <ImageView
            android:id="@+id/input_meeting_password_dialog_h_top_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/meeting_room_menu_h_line_height"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/y78"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#ebedf0" />-->

         <ImageView
            android:id="@+id/input_meeting_password_dialog_h_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/meeting_room_menu_h_line_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y100"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#ebedf0" />

        <LinearLayout
            android:id="@+id/input_meeting_password_two_button_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0dp" >

            <TextView
                android:id="@+id/input_meeting_password_dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/y100"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_left_btn_selector"
                android:gravity="center"
                android:text="@string/btn_cancle"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_text_color_black"
                />

            <ImageView
                android:id="@+id/input_meeting_password_dialog_v_line"
                android:layout_width="@dimen/meeting_room_menu_v_line_width"
                android:layout_height="@dimen/y100"
                android:background="#ebedf0" />

            <TextView
                android:id="@+id/input_meeting_password_dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_dialog_right_btn_selector"
                android:gravity="center"
                android:text="@string/jmeeting_ensure"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_text_color_green"
                />
        </LinearLayout>

   </RelativeLayout>

</RelativeLayout>
