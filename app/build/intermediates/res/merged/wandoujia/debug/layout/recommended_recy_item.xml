        <!--android:id="@+id/articleItem"-->
        <!--layout="@layout/articleitem" />-->
    <!--<include-->
        <!--android:id="@+id/secondArticle"-->
        <!--layout="@layout/articleitem" />-->
    <!--<include-->
        <!--android:id="@+id/thirdArticle"-->
        <!--layout="@layout/articleitem" />-->
</LinearLayout>