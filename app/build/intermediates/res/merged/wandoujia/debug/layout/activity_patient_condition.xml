<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_head_bg">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_information_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@color/main_head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x26"
            android:textColor="@color/btn_color_gray"
            android:text="@string/patient_condition_information"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/ll_information_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/patient_condition_age"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_color_gray"
                />

            <ImageView
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/y14"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reserve_dt_more"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information_gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/patient_condition_gender"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_color_gray"
                />

            <ImageView
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/y14"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reserve_dt_more"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information_height"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/patient_condition_height"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_color_gray"
                />

            <ImageView
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/y14"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reserve_dt_more"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_information_weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/patient_condition_weight"
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_color_gray"
                />

            <ImageView
                android:layout_width="@dimen/x21"
                android:layout_height="@dimen/y14"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reserve_dt_more"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_abstract_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@color/main_head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x26"
            android:textColor="@color/btn_color_gray"
            android:text="@string/patient_condition_abstract"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_abstract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/et_abstract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/patient_condition_limitation"
            android:padding="@dimen/x30"
            android:gravity="top"
            android:textSize="@dimen/x30"
            android:textColor="@color/btn_color_black"
            android:textColorHint="@color/reserve_dt_content_hint_color"
            android:maxLength="500"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:minHeight="@dimen/y200"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_inspection_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@color/main_head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x26"
            android:textColor="@color/btn_color_gray"
            android:text="@string/patient_condition_inspection"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <EditText
            android:id="@+id/et_inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/patient_condition_limitation"
            android:padding="@dimen/x30"
            android:gravity="top"
            android:textSize="@dimen/x30"
            android:textColor="@color/btn_color_black"
            android:textColorHint="@color/reserve_dt_content_hint_color"
            android:maxLength="500"
            android:ellipsize="end"
            android:textCursorDrawable="@drawable/color_cursor"
            android:minHeight="@dimen/y200"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_supported_check_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@color/main_head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_supported_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x26"
            android:textColor="@color/btn_color_gray"
            android:text="@string/patient_condition_supported_check"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <RelativeLayout
        android:id="@+id/rl_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_supported_check"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y64"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

    </LinearLayout>

        <ImageView
            android:id="@+id/iv_default"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/y64"
            android:layout_centerVertical="true"
            android:background="@drawable/patient_condition_add_picture"
            android:layout_toRightOf="@+id/ll_supported_check"/>

    </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_patient_condition_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y210"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:background="@color/white">

                <android.support.v4.view.ViewPager
                    android:id="@+id/patient_condition_check_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginRight="@dimen/x15"
                    />
            </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <LinearLayout
        android:id="@+id/ll_to_be_solved_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y44"
        android:background="@color/main_head_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_to_be_solved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/x26"
            android:textColor="@color/btn_color_gray"
            android:text="@string/patient_condition_to_be_solved"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

        <LinearLayout
        android:id="@+id/ll_to_be_solved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

            <EditText
                android:id="@+id/et_to_be_solved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="@string/patient_condition_limitation"
                android:padding="@dimen/x30"
                android:gravity="top"
                android:textSize="@dimen/x30"
                android:textColor="@color/btn_color_black"
                android:textColorHint="@color/reserve_dt_content_hint_color"
                android:maxLength="500"
                android:ellipsize="end"
                android:textCursorDrawable="@drawable/color_cursor"
                android:minHeight="@dimen/y200"/>

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5" />

    <TextView
        android:id="@+id/tv_patient_condition_complete"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y80"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y50"
        android:layout_marginBottom="@dimen/y50"
        android:gravity="center"
        android:text="@string/patient_condition_complete"
        android:textColor="@color/white"
        android:textSize="@dimen/x32"
        android:background="@drawable/reserve_treatment_btn_selector"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
