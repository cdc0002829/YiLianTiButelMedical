<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/incoming_dt_call_bg"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:id="@+id/qn_operate_dialog_body_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y173"
        android:gravity="center" >

        <ImageView
            android:id="@+id/incoming_dt_call_pic_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/incoming_dt_call_pic_bg_first" />

        <ImageView
            android:id="@+id/incoming_dt_call_pic_bg_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/incoming_dt_call_pic_bg_second" />
        <ImageView
            android:id="@+id/incoming_dt_call_pic_bg_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/incoming_dt_call_normal_pic_round" />

        <cn.redcdn.util.RoundImageView
            android:id="@+id/incoming_dt_call_pic"
            android:layout_width="@dimen/x242"
            android:layout_height="@dimen/x242"
            android:layout_centerInParent="true"
            android:background="@drawable/incoming_dt_call_normal_pic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/operate_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/qn_operate_dialog_body_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/incoming_dt_call_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ddd"
            android:textColor="#ffffff"
            android:textSize="@dimen/x36" />

        <TextView
            android:id="@+id/incoming_dt_call_dialog_nube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:text="ddd"
            android:textColor="#f5f4f7"
            android:textSize="@dimen/x26" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/two_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/y118"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/incoming_dt_call_left_button"
            android:layout_width="@dimen/x134"
            android:layout_height="@dimen/x134"
            android:background="@drawable/incoming_dt_call_left_btn_selector"
            android:gravity="left" />

        <ImageButton
            android:id="@+id/incoming_dt_call_right_button"
            android:layout_width="@dimen/x134"
            android:layout_height="@dimen/x134"
            android:layout_marginLeft="@dimen/x206"
            android:background="@drawable/incoming_dt_call_right_btn_selector"
            android:gravity="right" />
    </LinearLayout>

</RelativeLayout>