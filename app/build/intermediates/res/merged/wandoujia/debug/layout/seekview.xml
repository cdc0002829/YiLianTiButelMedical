<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/rl_seekview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/pause_ll"
            android:layout_width="@dimen/x64"
            android:layout_height="@dimen/y34"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x40">

            <Button
                android:id="@+id/control_bt"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/y34"
                android:background="@drawable/liveroom_pause_bt_selector"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/seek"
            android:layout_width="@dimen/x548"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_toLeftOf="@+id/fullscreen_bt"
            android:layout_toRightOf="@+id/pause_ll"
            android:focusable="false"
            android:maxHeight="@dimen/y3"
            android:minHeight="@dimen/y3"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_2"
            android:thumb="@drawable/seekbar_selector"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/init_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/tv_slash"
            android:text="@string/init_time"
            android:textColor="#71737a"
            android:textSize="@dimen/x20" />

        <TextView
            android:id="@+id/tv_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/finish_time"
            android:text="/"
            android:textColor="#71737a"
            android:textSize="@dimen/x20" />

        <TextView
            android:id="@+id/finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x28"
            android:layout_toLeftOf="@+id/fullscreen_bt"
            android:text="@string/finish_time"
            android:textColor="#71737a"
            android:textSize="@dimen/x20" />

        <Button
            android:id="@+id/fullscreen_bt"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignBaseline="@+id/pause_ll"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:background="@drawable/liveroom_normalscreen_bt_selector" />

    </RelativeLayout>

</RelativeLayout>