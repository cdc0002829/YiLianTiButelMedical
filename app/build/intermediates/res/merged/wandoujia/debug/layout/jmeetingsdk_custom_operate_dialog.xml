<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/y334"
        android:layout_centerInParent="true"
        android:background="@drawable/jmeetingsdk_custom_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/qn_operate_dialog_body_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y234"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@android:color/transparent"
            android:gravity="center">

            <TextView
                android:id="@+id/qn_operate_dialog_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="@string/jmeeting_joinmeeting"
                android:textColor="#737373"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/qn_operate_dialog_body_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qn_operate_dialog_body"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="@string/jmeeting_joinmeeting"
                android:textColor="#8d8d8d"
                android:textSize="@dimen/x32"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/custom_dialog_h_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y100"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#d9d9d9" />

        <LinearLayout
            android:id="@+id/two_button_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:padding="0dp">

            <Button
                android:id="@+id/qn_operae_dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_left_btn_selector"
                android:gravity="center"
                android:text="@string/btn_cancle"
                android:textColor="#656a72"
                android:textSize="@dimen/x36" />

            <ImageView
                android:id="@+id/custom_dialog_v_line"
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="#d9d9d9" />

            <Button
                android:id="@+id/qn_operae_dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_right_btn_selector"
                android:gravity="center"
                android:text="@string/jmeeting_ensure"
                android:textColor="#4cb4ce"
                android:textSize="@dimen/x36" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/one_button_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <Button
                android:id="@+id/qn_operae_dialog_center_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/jmeetingsdk_custom_dialog_center_btn_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#4cb4ce"
                android:textSize="@dimen/x36" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>