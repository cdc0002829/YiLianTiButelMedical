<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />


    <TextView
        android:id="@+id/tv_network_setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x28"
        android:background="#ebeef2"
        android:gravity="center|left"
        android:text="@string/setting_web_title"
        android:textColor="@color/setting_title_txt"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <RelativeLayout
        android:id="@+id/rl_network_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/default_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_set_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/setting_web_tip"
            android:textColor="@color/text_color_name"
            android:textSize="@dimen/x32" />

        <cn.redcdn.hvs.profiles.view.SlideSwitch
            android:id="@+id/set_web"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/y62"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:onClick="onButton" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <TextView
        android:id="@+id/tv_download_setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x28"
        android:background="#ebeef2"
        android:gravity="center|left"
        android:text="@string/setting_download_title"
        android:textColor="@color/setting_title_txt"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <RelativeLayout
        android:id="@+id/rl_download_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/default_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/setting_download_tip"
            android:textColor="@color/text_color_name"
            android:textSize="@dimen/x32" />

        <cn.redcdn.hvs.profiles.view.SlideSwitch
            android:id="@+id/set_download"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/y62"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:onClick="onButton" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />


    <TextView
        android:id="@+id/tv_meeting_setting_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x28"
        android:background="#ebeef2"
        android:gravity="center|left"
        android:text="@string/setting_meeting_title"
        android:textColor="@color/setting_title_txt"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <RelativeLayout
        android:id="@+id/rl_meeting_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@color/default_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_set_meeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/setting_meeting_tip"
            android:textColor="@color/text_color_name"
            android:textSize="@dimen/x32" />

        <cn.redcdn.hvs.profiles.view.SlideSwitch
            android:id="@+id/set_meet"
            android:layout_width="@dimen/x130"
            android:layout_height="@dimen/y62"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:onClick="onButton" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x28"
        android:background="#ebeef2"
        android:gravity="center|left"
        android:text="@string/voice_setting"
        android:textColor="@color/setting_title_txt"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <RelativeLayout
        android:id="@+id/goto_voice_detect_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@drawable/contact_item_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/voice_detect"
            android:textColor="@color/text_color_name"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/voice_detect_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/goto_voice_detect_btn"
            android:gravity="center"
            android:text="@string/deny"
            android:textColor="#f02424"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/goto_voice_detect_btn"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:background="@drawable/nextlittle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_marginLeft="@dimen/x28"
        android:background="#ebeef2"
        android:gravity="center|left"
        android:text="@string/camera_setting"
        android:textColor="@color/setting_title_txt"
        android:textSize="@dimen/x24" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/contact_item_divider_color" />

    <RelativeLayout
        android:id="@+id/set_resolution_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y96"
        android:background="@drawable/contact_item_selector"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/camera_setting"
            android:textColor="@color/text_color_name"
            android:textSize="@dimen/x32" />

        <Button
            android:id="@+id/set_resolution"
            android:layout_width="@dimen/x26"
            android:layout_height="@dimen/y26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x28"
            android:background="@drawable/nextlittle" />
    </RelativeLayout>
</LinearLayout>