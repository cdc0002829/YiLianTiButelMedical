<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="306dp"
        android:layout_height="251dp"
        android:layout_centerInParent="true"
        android:background="@drawable/meeting_room_main_button_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <RelativeLayout
            android:id="@+id/qn_operate_dialog_body_parent"
            android:layout_width="306dp"
            android:layout_height="251dp"
            android:background="@android:color/transparent" >

            <TextView
                android:id="@+id/qn_operate_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="11dp"
                android:background="@android:color/transparent"
                android:gravity="center|left"
                android:text="@string/openalive"
                android:textColor="#898b8d"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/qn_operate_dialog_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/jmeetingsdk_menu_live_titile_cancle" />

            <ImageView
                android:id="@+id/qn_operate_dialog_title_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/meeting_room_menu_h_line_height"
                android:layout_below="@+id/qn_operate_dialog_title"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#292d30" />

            <LinearLayout
                android:id="@+id/open_live_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/qn_operate_dialog_title_line"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/jmeetingsdk_menu_live_titile_edit_view_bg"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qn_operate_dialog_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/thenameoftheconsultation"
                    android:textColor="#747a80"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/meeting_room_menu_h_line_height"
                    android:layout_height="17dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="#292d30"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/qn_operate_dialog_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text="sssssssssssssssssss"
                    android:textColor="#eff3f7"
                    android:textSize="16sp" 
                    android:layout_marginRight="11dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/qn_operae_dialog_center_button"
                android:layout_width="219dp"
                android:layout_height="34dp"
                android:layout_below="@+id/open_live_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="29dp"
                android:background="@drawable/jmeetingsdk_button_selector"
                android:text="@string/openalive"
                android:textColor="#ffffff"
                android:textSize="@dimen/meetingadd_btn_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qn_operae_dialog_center_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="33dp"
                android:gravity="center|left"
                android:text="@string/accesslink"
                android:textColor="#4d5359"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>