<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y90">


    <cn.redcdn.hvs.profiles.activity.XCRoundImageView
        android:id="@+id/collection_operator_headimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x20"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/head"
        android:visibility="visible"
        />

    <View
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_gray_square_bg" />

    <TextView
        android:id="@+id/collection_operator_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x30"
        android:text="@string/time"
        android:textColor="#b5b5b5"
        android:textSize="@dimen/x24" />

    <TextView
        android:id="@+id/collection_operator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/collection_operator_time"
        android:layout_toRightOf="@id/collection_operator_headimageview"
        android:singleLine="true"
        android:text="@string/my_name"
        android:textColor="#2d2d2d"
        android:textSize="@dimen/x28" />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x640"
        android:layout_height="@dimen/y1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_butel_selfinfo_darkline_color" />

</RelativeLayout>