<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/photo_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y270"
        android:background="#ffffff"
        android:gravity="center_vertical">


        <cn.redcdn.hvs.profiles.view.RoundImageView
            android:id="@+id/doctor_approve_inputimage"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y150"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x28"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:background="@drawable/doctor_approve_input_image"
            android:visibility="visible"
            app:corner_radius="0dp" />


        <TextView
            android:id="@+id/doctor_approve_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x190"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/upload_pic"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/doctor_approve_texttwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor_approve_text"
            android:layout_marginLeft="@dimen/x190"
            android:layout_marginTop="@dimen/y24"
            android:text="@string/config_pic"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x28" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y368"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/y24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/y50"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/y160"
                    android:layout_marginTop="@dimen/y1">

                    <Button
                        android:id="@+id/btn_doctor"
                        android:layout_width="@dimen/x250"
                        android:layout_height="@dimen/y160"
                        android:background="@drawable/doctor_approve_handworkimage"
                        android:button="@null" />

                    <Button
                        android:layout_width="@dimen/x26"
                        android:layout_height="@dimen/y26"
                        android:layout_marginLeft="@dimen/x220"
                        android:layout_marginTop="@dimen/y130"
                        android:background="@drawable/doctor_approve_openbig"
                        android:visibility="visible" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y194"
                    android:text="@string/handle_pic"
                    android:textColor="#2d2d2d"
                    android:textSize="@dimen/x28" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x66"
                android:layout_marginTop="@dimen/y64">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textColor="#2d2d2d"
                    android:textSize="@dimen/x32" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x66">

                <FrameLayout
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/y160">

                    <Button
                        android:id="@+id/btn_medical"
                        android:layout_width="@dimen/x250"
                        android:layout_height="@dimen/y160"
                        android:background="@drawable/mypersoncard"
                        android:button="@null" />

                    <Button
                        android:layout_width="@dimen/x26"
                        android:layout_height="@dimen/y26"
                        android:layout_marginLeft="@dimen/x220"
                        android:layout_marginTop="@dimen/y130"
                        android:background="@drawable/doctor_approve_openbig"
                        android:visibility="visible" />
                </FrameLayout>

                <TextView
                    android:id="@+id/doctor_approve_medicaltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y194"
                    android:text="@string/chat_vcard_title"
                    android:textColor="#2d2d2d"
                    android:textSize="@dimen/x28" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <Button
        android:id="@+id/doctor_approve_next_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y164"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="@string/give_pass"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_lgoin_textsize" />

</LinearLayout>