<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/msgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="106dp"
            android:gravity="center_vertical"
            android:src="@drawable/jmeetingsdk_episode_mic_icon" />

        <TextView
            android:id="@+id/master_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:gravity="left" 
            android:layout_toRightOf="@+id/msgIcon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111"
            android:textColor="#f2f4f8"
            android:textSize="13sp" />
         <TextView
            android:id="@+id/speaker_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:gravity="left" 
            android:layout_toRightOf="@+id/master_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111"
            android:textColor="#f2f4f8"
            android:textSize="13sp" />
          <TextView
            android:id="@+id/speaker_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:gravity="left" 
            android:layout_toRightOf="@+id/speaker_view_1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111"
            android:textColor="#f2f4f8"
            android:textSize="13sp" />
           <TextView
            android:id="@+id/speaker_view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:gravity="left" 
            android:layout_toRightOf="@+id/speaker_view_2"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111"
            android:textColor="#f2f4f8"
            android:textSize="13sp" />
        
    </RelativeLayout>

</FrameLayout>