<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rt_remote_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <SurfaceView
        android:id="@+id/remote_video_surfaceview"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_centerInParent="true"
        android:keepScreenOn="true"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/init_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@color/color_black"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/butelconnect_vedio_init_bg"
        android:visibility="visible" />

    <SurfaceView
        android:id="@+id/local_video_surfaceview"
        android:layout_width="250px"
        android:layout_height="188px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:keepScreenOn="true"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/net_signal_qos_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/butelconnect_net_signal_normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/video_call_time"
            style="@style/VideoCallTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="bottom"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/x1_vedio_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/butelconnect_x1_monitor_close_btn_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ipcall_button_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/img_surprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/video_effects_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/video_effect_bg"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <Button
                android:id="@+id/video_beauty_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableTop="@drawable/butelconnect_video_effects_tab_icon"
                android:gravity="center_horizontal"
                android:text="@string/video_beauty"
                android:textColor="@color/butelconnect_video_effects_tab"
                android:textSize="@dimen/word_size_14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/video_effects_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/video_beauty_btn"
                android:background="@null"
                android:drawableTop="@drawable/butelconnect_video_effects_tab_icon"
                android:gravity="center_horizontal"
                android:text="@string/video_effects"
                android:textColor="@color/butelconnect_video_effects_tab"
                android:textSize="@dimen/word_size_14sp" 
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/video_effects_layout_hide_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:src="@drawable/butelconnect_video_effect_hide_btn" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/effects_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/gallery_parent"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >

                <GridView
                    android:id="@+id/effects_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="#00000000"
                    android:columnWidth="@dimen/video_effects_grid_column_width"
                    android:gravity="center"
                    android:horizontalSpacing="0dp"
                    android:listSelector="#00000000"
                    android:stretchMode="columnWidth" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>