<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/m_chat_record_poupowindow_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/ll"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/voice"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/im_voice"/>
    <ImageView
        android:layout_marginLeft="@dimen/x5"
        android:id="@+id/m_record_audio_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/meeting_record_icon_6"
        android:contentDescription="@null"
        android:scaleType="fitXY"/>
</LinearLayout>


        <TextView
            android:id="@+id/count_down_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/x152"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginTop="@dimen/x10"
            android:layout_below="@+id/ll"
            android:id="@+id/canclebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/public_cancle_btn_color"
            android:gravity="center_vertical"
            android:paddingBottom="25dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="@string/cancelThesendOnyourfinger"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </RelativeLayout>

</RelativeLayout>