<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_erweima_pic">

    <include
        android:id="@+id/title1"
        layout="@layout/titlebar" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="@dimen/x560"
        android:layout_height="@dimen/y806"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/name_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/erweiam_text_icon"
                android:layout_width="@dimen/x128"
                android:layout_height="@dimen/y128"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x56"
                android:layout_marginTop="@dimen/y60"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_default"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x34"
                android:layout_marginTop="@dimen/y70"
                android:layout_toRightOf="@id/erweiam_text_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/erweiam_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/creater"
                    android:textColor="@color/text_color_name"
                    android:textSize="@dimen/x32" />


                <TextView
                    android:id="@+id/erweima_text_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text="@string/my_account_id"
                    android:textColor="@color/text_color_num"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/erweima_iv"
            android:layout_width="@dimen/x448"
            android:layout_height="@dimen/y448"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/y130" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/y52"
            android:text="@string/good_friend"
            android:textColor="@color/text_color_num"
            android:textSize="@dimen/x26" />

    </android.support.v7.widget.CardView>

</RelativeLayout>