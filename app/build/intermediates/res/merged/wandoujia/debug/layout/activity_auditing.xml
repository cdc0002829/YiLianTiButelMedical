<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar"></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/auditingimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y110"
            app:srcCompat="@drawable/auditingactivity_image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x88"
            android:gravity="center"
            android:text="@string/auditing"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x36" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center"
        android:text="@string/auditinging"
        android:textColor="#8d8d8d"
        android:textSize="@dimen/x28" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:text="@string/please_wait"
        android:textColor="#8d8d8d"
        android:textSize="@dimen/x28" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="@dimen/x260"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y76"
            android:autoLink="phone"
            android:gravity="center"
            android:text="@string/audit_telephone"
            android:textColor="#b5b5b5"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/auding_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y76"
            android:autoLink="phone"
            android:gravity="center"
            android:textColor="#38abc8"
            android:textSize="@dimen/x24" />
    </LinearLayout>

</LinearLayout>
