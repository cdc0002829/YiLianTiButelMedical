<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <cn.redcdn.hvs.im.view.RoundImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y30"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:visibility="visible"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y30">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="14"
            android:text="@string/my_name"
            android:textColor="@color/color_threads_black_1"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/chat_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:text="@string/talking_time"
            android:textColor="@color/color_butel_selfinfo_darkline_color"
            android:textSize="@dimen/x24" />

        <RelativeLayout
            android:id="@+id/chat_image_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat_image_tv"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y20">

            <ImageView
                android:id="@+id/chat_image_iv"
                android:layout_width="@dimen/x626"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y20"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/x620"
            android:layout_height="@dimen/y1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/chat_image_rl"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/color_butel_selfinfo_darkline_color" />

    </RelativeLayout>


</LinearLayout>