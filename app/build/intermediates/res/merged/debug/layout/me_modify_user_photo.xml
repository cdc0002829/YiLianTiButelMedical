<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="19dp"
        android:text="@string/setting_picture_title"
        android:textColor="#3db2b9"
        android:textSize="@dimen/word_size_18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#3db2b9" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:background="@drawable/bg_bottom_menu_common_btn"
        android:gravity="center_vertical"
        android:paddingLeft="19dp"
        android:text="@string/bottom_menu_take_photo"
        android:textColor="#313233"
        android:textSize="@dimen/word_size_18sp"
        android:textStyle="normal" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#eeedf2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/me_modify_userico_dialog_btn"
        android:gravity="center_vertical"
        android:paddingLeft="19dp"
        android:text="@string/bottom_menu_pick_photo"
        android:textColor="#313233"
        android:textSize="@dimen/word_size_18sp"
        android:textStyle="normal" />

</LinearLayout>