<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <include        android:id="@+id/title"        layout="@layout/titlebar" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="fill_parent" >        <ImageView            android:id="@+id/collection_file_icon"            android:layout_marginTop="55dp"            android:layout_width="80dp"            android:layout_height="80dp"            android:background="@drawable/no_notice_icon"            android:layout_centerHorizontal="true"            android:focusable="false"            android:scaleType="centerCrop" />                <TextView            android:id="@+id/collecion_file_name"            android:layout_width="160dp"            android:layout_height="wrap_content"            android:layout_below="@id/collection_file_icon"            android:layout_marginTop="40dp"            android:layout_centerHorizontal="true"            android:textSize="15sp"            android:textColor="#333333"            android:gravity="center_horizontal"            android:text="产品经理的第一本书（第二版）.pdf" />        <RelativeLayout            android:id="@+id/collection_download_ly"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/collecion_file_name"             android:visibility="gone"            android:layout_marginTop="40dp" >                        <RelativeLayout                android:id="@+id/collection_load_ly"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_alignParentLeft="true"                android:layout_alignParentTop="true"                >                <Button                    android:id="@+id/collection_stop_btn"                    android:layout_width="@dimen/x46"                    android:layout_height="@dimen/x46"                    android:layout_alignParentRight="true"                    android:layout_gravity="center_vertical"                    android:layout_marginLeft="10dp"                    android:layout_marginRight="12dp"                    android:background="@drawable/collection_load_stop_selector" />                <ProgressBar                    android:id="@+id/collection_load_progress"                    style="@style/chat_download_style"                    android:layout_width="fill_parent"                    android:layout_height="8dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="12dp"                    android:layout_toLeftOf="@+id/collection_stop_btn"                    android:max="100" />            </RelativeLayout>            <TextView android:id="@+id/download_duration"                android:layout_below="@id/collection_load_ly"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="12sp"                android:textColor="#666666"                android:layout_centerHorizontal="true"                android:layout_marginTop="20dp"                android:text="正在下载...(1M/2M)"></TextView>        </RelativeLayout>                <RelativeLayout            android:id="@+id/openorreload_layout"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/collecion_file_name"            android:layout_centerHorizontal="true"            android:layout_marginTop="25dp" >                            <Button                    android:id="@+id/collection_openfile_btn"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="center_vertical"                    android:layout_centerHorizontal="true"                    android:layout_marginLeft="12dp"                    android:layout_marginRight="12dp"                    android:text="使用第三方应用打开"                    android:textColor="#ffffff"                    android:background="@drawable/collection_openfile_btn" />            <TextView android:id="@+id/collection_openfile_txt"                android:layout_below="@id/collection_openfile_btn"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textSize="12sp"                android:textColor="#666666"                android:layout_centerHorizontal="true"                android:layout_marginTop="18dp"                android:lines="2"                android:lineSpacingExtra="7dp"                android:text="@string/collecyion_openfile_hint"></TextView>        </RelativeLayout>    </RelativeLayout></LinearLayout>