<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x28"
                android:text="@string/email"
                android:textColor="#2d2d2d"
                android:textSize="@dimen/x32" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x85"/>

        <EditText
            android:id="@+id/register_mail_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="@string/input_email"
            android:textColor="#2d2d2d"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/x32" />
    </LinearLayout>


        <View
            android:layout_width="@dimen/x692"
            android:layout_height="@dimen/y1"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x28"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/input_psw"
                android:layout_marginLeft="@dimen/x28"
                android:textColor="#2d2d2d"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/x32" />


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x20"/>

        <EditText
            android:id="@+id/register_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:digits="1234567890"
            android:hint="@string/set_psw"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:password="true"
            android:textColor="#2d2d2d"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/x32" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y40"
        android:gravity="center_vertical">

        <CheckBox
            android:checked="false"
            android:id="@+id/agreement_email_cb"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:button="@null"
            android:background="@drawable/checkbox_style"
            android:layout_marginLeft="@dimen/x34"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_read"
            android:textSize="@dimen/x24"
            android:textColor="#8d8d8d"
            android:layout_marginLeft="@dimen/x14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_service_button"
            android:id="@+id/webviewBnt"
            android:textSize="@dimen/x24"
            android:textColor="@color/forgetpwd"/>

    </LinearLayout>

    <Button
        android:id="@+id/email_register_next_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y57"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />

</LinearLayout>