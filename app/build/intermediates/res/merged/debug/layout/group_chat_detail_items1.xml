<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_chat_details1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/Group_Chat_Detail_Item"
        android:id="@+id/group_chat_name_relativelayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_centerVertical="true"
            android:textColor="@color/group_chat_item_left_color"
            android:id="@+id/group_chat_name_tag"
            android:textSize="@dimen/x32"
            android:text="@string/group_chat_name"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/group_chat_name_tag"
            android:paddingRight="@dimen/x28">

            <TextView
                android:id="@+id/group_chat_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/x18"
                android:drawableRight="@drawable/next"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/no_name"
                android:textColor="@color/group_chat_item_right_color"
                android:textSize="@dimen/x32"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/left_line"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y1"
            android:background="@color/color_white"/>

        <View
            android:layout_width="@dimen/x692"
            android:layout_height="@dimen/y1"
            android:layout_toRightOf="@+id/left_line"
            android:background="@color/diver_line_dark"/>
    </RelativeLayout>

    <RelativeLayout
        style="@style/Group_Chat_Detail_Item"
        android:id="@+id/group_qrcode_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_centerVertical="true"
            android:textColor="@color/group_chat_item_left_color"
            android:textSize="@dimen/x32"
            android:text="@string/group_chat_code"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x28"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t_arrow"
                    android:layout_width="@dimen/x34"
                    android:layout_height="@dimen/y34"
                    android:layout_centerVertical="true"
                    android:src="@drawable/group_chat_barcode"/>

                <ImageView
                    android:id="@+id/right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/t_arrow"
                    android:layout_marginLeft="@dimen/x25"
                    android:src="@drawable/next"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/left_line2"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y1"
            android:background="@color/color_white"/>

        <View
            android:layout_width="@dimen/x692"
            android:layout_height="@dimen/y1"
            android:layout_toRightOf="@+id/left_line2"
            android:background="@color/diver_line_dark"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:id="@+id/group_accouncement_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x28"
                    android:text="@string/group_notices"
                    android:textColor="@color/group_chat_item_left_color"
                    android:textSize="@dimen/x32"/>
                <TextView
                    android:id="@+id/default_notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x68"
                    android:text="@string/no_set"
                    android:textColor="@color/group_chat_item_right_color"
                    android:textSize="@dimen/x32"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_group_announce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x68"
                android:textSize="@dimen/x32"
                android:textColor="#8d8d8d"
                android:layout_marginBottom="@dimen/x25"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/notice_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            android:src="@drawable/next"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/left_line3"
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y1"
            android:background="@color/color_white"/>

        <View
            android:layout_width="@dimen/x692"
            android:layout_height="@dimen/y1"
            android:layout_toRightOf="@+id/left_line3"
            android:background="@color/diver_line_dark"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:id="@+id/group_meeting_layout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x28"
                    android:text="@string/group_meeting"
                    android:textColor="@color/group_chat_item_left_color"
                    android:textSize="@dimen/x32"/>
                <TextView
                    android:id="@+id/default_group_meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x68"
                    android:text="@string/no_config"
                    android:textColor="@color/group_chat_item_right_color"
                    android:textSize="@dimen/x32"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_group_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x28"
                android:layout_marginRight="@dimen/x68"
                android:textSize="@dimen/x32"
                android:textColor="#8d8d8d"
                android:layout_marginBottom="@dimen/x25"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/group_meeting_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x28"
            android:src="@drawable/next"
            />

    </RelativeLayout>

</LinearLayout>
