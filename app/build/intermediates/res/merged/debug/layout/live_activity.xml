<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <SurfaceView
        android:id="@+id/live_remote_surfaceview_test"
        android:layout_width="480px"
        android:layout_height="640px"
        android:keepScreenOn="true"
        android:visibility="invisible"
        android:layout_centerInParent="true" />
     <SurfaceView
        android:id="@+id/live_local_surfaceview_test"
        android:layout_width="250px"
        android:layout_height="188px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:keepScreenOn="true"
        android:visibility="invisible"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp" />
    <!-- 显示result -->
    <com.butel.connectevent.test.utils.MyEditText
        android:id="@+id/edt_live_result"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:background="#e0e0e0"
        android:editable="false"
        android:gravity="left"
        android:hint="Live-Show"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp" />
      
    <Button android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"></Button>
   
    <ScrollView
        android:id="@+id/sv_ui"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_live_result" >
         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        
    <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="pAPPID"
        android:id="@+id/edt_live_appid"
         ></EditText>
     <EditText 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:hint="APPKEY"
       android:id="@+id/edt_live_appkey"
       android:layout_below="@id/edt_live_appid"/>
     
     <EditText 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="pbServer"
        android:id="@+id/edt_live_pbserver"
        android:layout_below="@id/edt_live_appkey"/>
     <EditText 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:hint="meadiaServer"
       android:id="@+id/edt_live_media"
       android:layout_below="@id/edt_live_pbserver"/>
     <EditText 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:hint="livePushServer"
       android:id="@+id/edt_live_stream"
       android:layout_below="@id/edt_live_media"/>
     <Button 
         android:id="@+id/btn_init"
         android:layout_below="@id/edt_live_stream"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="Init"/>
     <EditText 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:hint="nube"
       android:id="@+id/edt_live_nube"
       android:layout_below="@id/btn_init"/>
     <Button 
         android:id="@+id/btn_start"
         android:layout_below="@+id/edt_live_nube"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Start"/>
     <Button 
         android:id="@+id/btn_switch"
         android:layout_below="@+id/edt_live_nube"
         android:layout_toRightOf="@id/btn_start"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Switch"/>
     <Button 
         android:id="@+id/btn_stop"
         android:layout_below="@+id/edt_live_nube"
         android:layout_toRightOf="@id/btn_switch"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Stop"/>
     </RelativeLayout>
     </ScrollView>
</RelativeLayout>
