<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/color_page_backgroud_color"
    android:splitMotionEvents="false" >
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y260">
        <LinearLayout
            android:id="@+id/share2wechat_ll"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x130"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_share_img"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#737373"
                android:textSize="@dimen/x22"
                android:text="@string/wechat"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share2qq_ll"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qq_share_img"/>
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:textSize="@dimen/x22"
                android:text="@string/qq"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share2msg_ll"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message_share_img"/>
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg"
                android:layout_gravity="center"
                android:textColor="#737373"
                android:textSize="@dimen/x22"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#dbdcdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"></View>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/share_to_friends_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <Button
            android:id="@+id/share2friends_dismiss_btn"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="@dimen/y36"
            android:clickable="false"
            android:text="@string/btn_cancle"
            />
    </LinearLayout>
</LinearLayout>