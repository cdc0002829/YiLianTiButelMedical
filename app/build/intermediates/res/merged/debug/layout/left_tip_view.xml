<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_tip_view"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/wait_progressBar"
        style="@style/pullToRefreshProgressStyle"
        android:layout_width="@dimen/tip_img_size"
        android:layout_height="@dimen/tip_img_size"
        android:indeterminateDuration="600" />

    <TextView
        android:id="@+id/wait_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:text="@string/sip_wait_message"
        android:textColor="@color/title_bar_txt_colot"
        android:textSize="14sp" />

</LinearLayout>