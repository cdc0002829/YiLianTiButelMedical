<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qn_operate_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >

    <RelativeLayout
        android:id="@+id/custom_dialog_bg"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y554"
        android:background="@drawable/jmeetingsdk_custom_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y400">
            <ImageView
                android:id="@+id/pay_dialog_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageButton
                android:id="@+id/del"
                android:scaleType="fitXY"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:background="@null"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/y30"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/pop_close_selector" />
        </FrameLayout>

        <Button
            android:id="@+id/ma"
            android:layout_width="@dimen/x540"
            android:layout_height="@dimen/y94"
            android:layout_gravity="bottom"
            android:background="@drawable/dingyue_selector"
            android:text="@string/enroll"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y30"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/x32"
           />


    </RelativeLayout>

</RelativeLayout>