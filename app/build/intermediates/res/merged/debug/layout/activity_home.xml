<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.redcdn.hvs.HomeActivity">

    <cn.redcdn.hvs.head.viewpager.NoScrollHorizontalViewPager
        android:id="@+id/main_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#c3c8cd" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y108">

        <RadioGroup
            android:id="@+id/main_tab_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y108"
            android:layout_gravity="bottom"
            android:background="#f8f9fb"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y12"
            android:paddingLeft="@dimen/x33"
            android:paddingRight="@dimen/x33"
            android:paddingTop="@dimen/y12">

            <RadioButton
                android:id="@+id/rb_message"
                style="@style/rb_style"
                android:drawableTop="@drawable/message_button"
                android:text="@string/titlebar_middle_message"
                android:textColor="@drawable/color_radiobutton" />
            <RadioButton
                android:id="@+id/rb_meeting"
                style="@style/rb_style"
                android:drawableTop="@drawable/contact_button"
                android:text="@string/meeting"
                android:textColor="@drawable/color_radiobutton" />

            <RadioButton
                android:id="@+id/rb_head"
                style="@style/rb_style"
                android:drawableTop="@drawable/meeting_button"
                android:text="@string/medical_media"
                android:textColor="@drawable/color_radiobutton" />

            <RadioButton
                android:id="@+id/rb_contacts"
                style="@style/rb_style"
                android:drawableTop="@drawable/subscribe_button"
                android:text="@string/titlebar_middle_contact"
                android:textColor="@drawable/color_radiobutton" />
            <RadioButton
                android:id="@+id/rb_me"
                style="@style/rb_style"
                android:drawableTop="@drawable/me_button"
                android:text="@string/me"
                android:textColor="@drawable/color_radiobutton" />
        </RadioGroup>

        <ImageView
            android:id="@+id/new_msg_flag"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y20"
            android:layout_marginBottom="@dimen/y90"
            android:layout_marginLeft="@dimen/x130"
            android:layout_marginTop="@dimen/y8"
            android:gravity="center"
            android:visibility="invisible"
            android:src="@drawable/chat_unread_count_flag"
            />

        <TextView
            android:id="@+id/total_new_notice_num"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x34"
            android:layout_marginBottom="@dimen/y90"
            android:layout_marginLeft="@dimen/x104"
            android:layout_marginTop="@dimen/y6"
            android:background="@drawable/chat_unread_count"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:visibility="invisible"
             />
        <TextView
            android:id="@+id/total_dt_notice_num"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x34"
            android:layout_marginBottom="@dimen/y90"
            android:layout_marginLeft="@dimen/x235"
            android:layout_marginTop="@dimen/y6"
            android:background="@drawable/chat_unread_count"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:visibility="invisible"
            />


        <TextView
            android:id="@+id/total_new_friends_num"
            android:layout_width="@dimen/x34"
            android:layout_height="@dimen/x34"
            android:layout_marginBottom="@dimen/y90"
            android:layout_marginLeft="@dimen/x505"
            android:layout_marginTop="@dimen/y8"
            android:background="@drawable/chat_unread_count"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/x16"
            android:visibility="invisible" />

    </FrameLayout>
</LinearLayout>
