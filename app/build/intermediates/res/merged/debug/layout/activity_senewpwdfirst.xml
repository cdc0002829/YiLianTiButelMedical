<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/systembg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x28"
            android:text="@string/account"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x32" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center"
            android:background="#d9d9d9"
            android:layout_marginLeft="@dimen/x85"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/setnewpwdfirst_inputnum_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:background="@null"
            android:hint="@string/input_login_email"
            android:textColor="#2d2d2d"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/x32" />
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <Button
        android:id="@+id/setnewpwd_next_btn"
        android:layout_width="@dimen/x670"
        android:layout_height="@dimen/y94"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y210"
        android:background="@drawable/button_selector"
        android:focusable="true"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="@dimen/x34" />

</LinearLayout>