<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/img_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_target"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x15"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/came2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/checkbox_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/m_notice_checkbox_nor"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerInside" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/vedio_camera_btn"
            android:contentDescription="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="5dip"
            android:text="00:30"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>