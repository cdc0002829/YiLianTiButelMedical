<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/change_video_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <ImageView
            android:id="@+id/image_change_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/jmeetingsdk_change_mode_video_open_selector" >
        </ImageView>

        <TextView
            android:id="@+id/change_video_name"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="我是谁..."
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/change_video_resolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:text="1720*800"
            android:textColor="#969799"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_video_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#373a41" />
    </LinearLayout>

</LinearLayout>