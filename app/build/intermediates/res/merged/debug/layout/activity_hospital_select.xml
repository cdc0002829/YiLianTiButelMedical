<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_select"
    android:layout_width="@dimen/x680"
    android:layout_height="@dimen/y1220"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="cn.redcdn.hvs.accountoperate.activity.HospitalSelectActivity">

    <LinearLayout
        android:layout_width="@dimen/x680"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f1f0f6">

        <Button
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/y34"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/hospital_select_back" />

        <TextView
            android:id="@+id/hospital_select_title"
            android:layout_width="@dimen/x568"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="#656a72"
            android:textSize="@dimen/x30" />

        <Button
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/y28"
            android:background="@drawable/hospital_select_close"
            android:layout_marginRight="@dimen/x24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x640"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/y32"
            android:layout_marginLeft="@dimen/x24"
            android:src="@drawable/hospital_select_search" />

        <EditText
            android:id="@+id/hospital_select_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:hint="@string/find_hospital"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/x28" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/x680"
        android:layout_height="@dimen/y1"
        android:background="#d9d9d9" />

    <ListView
        android:id="@+id/hospital_list"
        android:layout_width="@dimen/x680"
        android:layout_height="@dimen/y1220">

    </ListView>

</LinearLayout>
