<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/bucket_bg"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/image_target"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/multi_bucket_chooser_img_margin"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:focusable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/video_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/selected_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#60000000"
            android:textIsSelectable="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/checkbox_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginLeft="@dimen/x184"
            android:layout_marginTop="@dimen/y6"
            android:contentDescription="@null"
            android:focusable="false"
            android:padding="2dip"
            android:src="@drawable/select_pictures_select_icon_selected"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <TextView
            android:id="@+id/bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="#2D2D2D"
            android:textSize="@dimen/x32" />


        <TextView
            android:id="@+id/bucket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/bucket_name"
            android:textColor="#c7c7cd"
            android:textSize="@dimen/x32" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/nextlittle" />

    </RelativeLayout>

</LinearLayout>