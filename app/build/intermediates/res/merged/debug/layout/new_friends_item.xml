<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y150"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_new_friends_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@drawable/contact_item_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_new_friends_item_image"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:background="@drawable/default_head_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/ll_new_friends_item_content"
            android:layout_width="@dimen/x400"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x30">

            <TextView
                android:id="@+id/tv_new_friends_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/x32"
                android:textColor="@color/btn_color_black"
                android:maxLength="14"
                android:ellipsize="end"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tv_new_friends_item_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/x28"
                android:textColor="@color/btn_color_gray"
                android:maxLength="27"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_new_friends_item_accept"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y60"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x20"
            android:text=""
            android:textColor="@color/btn_color_blue"
            android:visibility="visible"
            android:textSize="@dimen/x28"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="#e3e4e5"
        />

</LinearLayout>