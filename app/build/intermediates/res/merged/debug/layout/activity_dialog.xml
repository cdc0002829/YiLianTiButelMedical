<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#7F778899"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="#f6f9fb"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="#e3e4e5"/>
        <EditText

            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/password_shape"
            android:textColor="#2d2d2d"
            android:textSize="@dimen/x28"
            android:paddingLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y72"
            android:hint="@string/videoPwd"
            android:textColorHint="#8d8d8d"/>
        <Button
            android:layout_marginTop="@dimen/y30"
            android:id="@+id/btn_toVideoPublic"
            android:background="@drawable/startmeetingbtn_selector"
            android:text="@string/watch"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:layout_height="@dimen/y96"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/y20"/>
    </LinearLayout>

</RelativeLayout>